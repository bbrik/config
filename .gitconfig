[user]
	name = Bernardo Brik
	email = bernardobrik@gmail.com

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /Users/bbrik/.gitignore
	autocrlf = input

[alias]
    st = status -sb
    co = checkout
    ls = ls-files
	  lg = log --all --color --graph --abbrev-commit --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Creset'
    mnf = merge --no-ff

[repack]
    usedeltabaseoffset = true

[branch "master"]
    remote = origin
    merge = refs/heads/master

[pack]
    threads = 2

[receive]
    denyCurrentBranch = ignore

[push]
	default = current
